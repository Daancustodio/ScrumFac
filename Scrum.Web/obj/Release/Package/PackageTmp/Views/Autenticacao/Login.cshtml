@model Scrum.Dominio.Models.Usuario

@{
    ViewBag.Title = "Login - Scrum";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="container" style="margin-top: 40px">
    <div class="row">

        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel panel-default">

                <div class="panel-heading"> <strong> Scrum Login</strong></div>
                <div class="panel-body">

                    @using (Html.BeginForm("Login", "Autenticacao", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
                    {
                        <fieldset>
                            <div class="row">
                                <div class="center-block">
                                    <img class="profile-img" src="" alt="">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-user"> </i>
                                            </span>
                                            @Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "Informe seu login" })                                           
                                        </div>
                                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-lock"> </i>
                                            </span>
                                            @Html.PasswordFor(model => model.senha, new { @class = "form-control", placeholder = "Informe sua seha" })
                                            
                                        </div>
                                        @Html.ValidationMessageFor(model => model.senha, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Acessar">
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    }

                </div>
                <div class="panel-footer text-right">
                   @Html.ActionLink("Registre-se", "Cadastro", "Autenticacao")
                </div>
            </div>
        </div>
    </div>
</div>

