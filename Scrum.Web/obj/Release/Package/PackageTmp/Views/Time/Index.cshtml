@model IEnumerable<Scrum.Dominio.Models.Time>

@{
    ViewBag.Title = "Lista de time - Scrum";
}

<h2 class="text-center">Lista de time</h2>

<p>
    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-default"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataCriacao)
        </th>        
        <th>Opções</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataCriacao)
        </td>       
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "btn btn-default glyphicon glyphicon-pencil", @title = "Editar time." })
            @Html.ActionLink(" ", "Details", new { id = item.id }, new { @class = "btn btn-primary glyphicon glyphicon-list-alt", @title = "Visualizar detalhes do time." })
            @Html.Raw("<a data-modal='' href='/Time/Delete/" + item.id + "' id='" + item.id + "' title='Delete'> <span class='btn btn-danger glyphicon glyphicon-trash'> </span> </a>")
        </td>
    </tr>
}

</table>
