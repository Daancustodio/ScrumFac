@model Scrum.Dominio.Models.Usuario
@{
    ViewBag.Title = "Cadastro - Scrum";
    Layout = "~/Views/Shared/_Login.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal panel panel-default col-sm-7 col-md-5 col-md-offset-4">
